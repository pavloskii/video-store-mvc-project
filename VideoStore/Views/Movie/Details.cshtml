@model VideoStore.Models.Movie

@{
    ViewBag.Title = "Details: " + Model.Name;
}


<div class="container-fluid">
    <div class="col-md-6">
        <h2>@Model.Name</h2>
        <ul>
            <li>Genre: @Model.Genre.Name</li>
            <li>Release Date: @Model.ReleaseDate</li>
            <li>Date Added: @Model.DateAdded</li>
            <li>Number in stock: @Model.NumberInStock</li>
        </ul>
    </div>
    <div class="col-md-6">
        @Html.ActionLink("Back", "Index", "Movie", null, new { @class="btn btn-primary"})
    </div>
</div>



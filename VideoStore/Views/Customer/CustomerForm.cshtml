@model VideoStore.ViewModel.CustomerFormViewModel

@{
    ViewBag.Title = "CustomerForm";
}


<h2>
    @{ if (Model.Customer.Id == 0)
        {
            <text>New Customer</text>
        }
        else
        {
            <text>Edit Customer</text>
        }
    }
</h2>


@using (Html.BeginForm("Save", "Customer"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Name)
        @Html.TextBoxFor(m => m.Customer.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Customer.DateOfBirth)
        @Html.TextBoxFor(m => m.Customer.DateOfBirth, "{0:d MMM yyyy}", new { @class="form-control"})
    </div>

    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.Customer.IsSubscribedToNewsletter)@Html.LabelFor(m => m.Customer.IsSubscribedToNewsletter, new { @class = "form-control" })
        </label>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Customer.MembershipTypeId)
        @Html.DropDownListFor(m => m.Customer.MembershipTypeId,
            new SelectList(Model.MembershipTypes, "MembershipTypeId", "Name"),
            "Please select membership type", new { @class = "form-control" })
    </div>


    @Html.HiddenFor(m => m.Customer.Id);
    <input type="submit" value="Save" />
}

<div class="col-md-6">
    @Html.ActionLink("Back", "Index", "Customer", null, new { @class = "btn btn-primary" })
</div>




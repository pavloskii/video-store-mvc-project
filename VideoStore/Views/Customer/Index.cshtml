@model IEnumerable<VideoStore.Models.Customer>

@{
    ViewBag.Title = "Customers";
}

<h2>Customers</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Discount Rate</th>
            <th></th>
            <th></th>
            <th class="text-right">@Html.ActionLink("New", "New", "Custoer", new { @class = "btn btn-success" })</th>
        </tr>

    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Name</td>
                <td>@customer.MembershipType.DiscountRate</td>
                <td class="text-right">@Html.ActionLink("Delete", "Delete", "Customer", new { customerId = customer.Id }, new { @class = "btn btn-danger" })</td>
                <td class="text-right">@Html.ActionLink("Edit", "Edit", "Customer", new { customerId = customer.Id }, new { @class = "btn btn-warning" })</td>
                <td class="text-right">@Html.ActionLink("Details", "Details", "Customer", new { id = customer.Id }, new { @class = "btn btn-primary" })</td>
            </tr>
        }
    </tbody>
</table>
